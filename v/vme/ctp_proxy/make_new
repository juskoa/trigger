	$(CC) $(CFLAGS) $< -c -o $@
$(EXEDIR)/act.exe: main_act.o cfg2part.o $(LIBDEP) $(actDEP)
	$(CC) $(LDFLAGS) $< $(CTPLD) $(VMEBLD) $(actLD) $(infoLD) $(MYSQLLIBS) -o $@
#-------------------------------------------- dimc
dimc.o:dimc.c dimtypes.h
	$(CC) $(CFLAGS) -c -o $@ $<
$(EXEDIR)/dimc: dimc.o
